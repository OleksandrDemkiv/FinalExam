<Window x:Class="FinalExam.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FinalExam"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        Loaded="Window_Loaded">
    <Grid>
        <Label Content="Events" HorizontalAlignment="Left" Margin="74,40,0,0" VerticalAlignment="Top" Width="54"/>
        <TextBox HorizontalAlignment="Left" Margin="152,45,0,0" TextWrapping="Wrap" Text="Search" VerticalAlignment="Top" Width="120" Height="21"/>
        <Label Content="Tickets" HorizontalAlignment="Left" Margin="426,43,0,0" VerticalAlignment="Top"/>
        <ListBox x:Name="EventsBox" HorizontalAlignment="Left" Height="253" Margin="74,0,0,0" VerticalAlignment="Center" Width="288" SelectionChanged="EventsBox_SelectionChanged"/>
        <ListBox x:Name="TicketsBox" HorizontalAlignment="Left" Height="253" Margin="423,0,0,0" VerticalAlignment="Center" Width="300"/>
        <Label Content="Number of Tickets" HorizontalAlignment="Left" Margin="439,370,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="NoOfTickets" HorizontalAlignment="Left" Margin="551,374,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <Button Content="Book" HorizontalAlignment="Left" Margin="695,373,0,0" VerticalAlignment="Top" Width="53" Click="Button_Click"/>
        <Label x:Name="MsgLabel" Content="" HorizontalAlignment="Left" Height="57" Margin="37,349,0,0" VerticalAlignment="Top" Width="350" FontSize="16"/>

    </Grid>
</Window>
